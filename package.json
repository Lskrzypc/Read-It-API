{
  "name": "mabibliapi",
  "version": "0.0.2",
  "description": "Restful API for Mabibli App",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test DATABASE_NAME=test FIRESTORE_DATABASE_NAME=printer-manager-test mocha --exit",
    "coverage": "nyc npm run test",
    "lint": "eslint . --ext .ts ",
    "dependencies:check": "depcheck",
    "dependencies:update": "npx npm-check-updates -u && npm install",
    "build": "rimraf dist/ && tsc -p tsconfig-build.json",
    "start": "node dist/index.js",
    "dev": "nodemon --watch . --watch .env --ignore ./dist --ignore ./test src/index.ts",
    "check": "npm run build && npm run dependencies:check && npm run lint && npm audit",
    "version:patch": "npm version patch && git add . && git push",
    "version:minor": "npm version minor && git add . && git push",
    "version:major": "npm version major && git add . && git push"
  },
  "keywords": [
    "Restful",
    "api",
    "api",
    "nodejs",
    "expressjs"
  ],
  "author": "LsIT",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.0"
  }
}
